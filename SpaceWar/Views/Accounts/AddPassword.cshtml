@model SpaceWar.Models.Accounts.AddPasswordViewModel

@*
    AddPassword.cshtml
*@

<h2>Add Password</h2>
<hr />
<p class="text-info">
    Please add a password to you account. <br />
    Your username will be you email address. <br />
</p>
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-controll"/>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-controll" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button 
                type="submit"
                class="btn btn-primary"
                style="width:auto">
                Set Password
            </button>
        </form>
    </div>
</div>