@model SpaceWar.Models.Ships.ShipCreateViewModel

<div>
    <form method="post" asp-action="Update" enctype="multipart/form-data">

        <div class="form-group-row">
            <label asp-for="ShipName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ShipName" class="form-control" />
            </div>
        </div>

        <div class="form-group-row">
            <label asp-for="ShipClass" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ShipClass" class="form-control" />
            </div>
        </div>

        <div class="form-group-row">
            <label asp-for="PrimaryAttackPower" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="PrimaryAttackPower" class="form-control" />
            </div>
        </div>

        <div class="form-group-row">
            <label asp-for="PrimaryAttack" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="PrimaryAttack" class="form-control" />
            </div>
        </div>

        <div class="form-group-row">
            <label asp-for="SecondaryAttackPower" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="SecondaryAttackPower" class="form-control" />
            </div>
        </div>

        <div class="form-group-row">
            <label asp-for="SecondaryAttack" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="SecondaryAttack" class="form-control" />
            </div>
        </div>

        <div class="form-group-row">
            <label asp-for="UltimateAttackPower" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="UltimateAttackPower" class="form-control" />
            </div>
        </div>

        <div class="form-group-row">
            <label asp-for="UltimateAttack" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="UltimateAttack" class="form-control" />
            </div>
        </div>

        <div class="form-group-row">
            <label asp-for="Files" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-5">
                <div class="custon-file">
                    <input class="form-control custon-file-input" asp-for="Files" multiple type="file" />
                    <label class="custom-file-label">Choose Images from device -></label>
                </div>
            </div>
        </div>
        <div>
            @foreach(var image in Model.Image)
            {
                <partial name="_Images" model="image"></partial>
                <input asp-action="removeImage" asp-controller="ships" asp-route-id="@image.ImageID" type="submit" class="btn btn-danger" value="DELETE THIS"/>
            }
        </div>

        <input asp-action="Update" asp-controller="Ships" type="submit"
               class="btn btn-primary" value="Update">Change this ship</input>
        <a asp-action="index" class="btn btn-primary">Cancel</a>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileLabel = $(this).next('.custon-file-input');
                var files = $(this)[0].files;
                if (files.lenght > 1) {
                    fileLabel.html(files.lenght + ' files selected');
                }
                else if (files.lenght == 1) {
                    fileLabel.html(files[0].name);
                }
            });
        });
    </script>
}
