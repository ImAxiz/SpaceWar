@model SpaceWar.Models.Ships.ShipCreateViewModel

<div>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Built" type="hidden" />
        <input asp-for="Destroyed" tyoe="hidden" />
        <input asp-for="ShipXP" value="0" type="hidden" />
        <input asp-for="ShipLevel" value="0" type="hidden" />
        <input asp-for="ShipXPNextLevel" value="50" type="hidden" />
        <input asp-for="ShipStatus" value="´UpAndRunning" type="hidden" />
        <input asp-for="ShipDurability" type="hidden" />


        <div class="form-group-row">
            <label asp-for="ShipName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ShipName" class="form-control" />
            </div>
        </div>

        <div class="form-group-row">
            <label asp-for="ShipClass" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ShipClass" class="form-control" />
            </div>
        </div>

        <div class="form-group-row">
            <label asp-for="PrimaryAttackName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="PrimaryAttackName" class="form-control" />
            </div>
        </div>

        <div class="form-group-row">
            <label asp-for="PrimaryAttack" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="PrimaryAttack" class="form-control" />
            </div>
        </div>

        <div class="form-group-row">
            <label asp-for="SecondaryAttackName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="SecondaryAttackName" class="form-control" />
            </div>
        </div>

        <div class="form-group-row">
            <label asp-for="SecondaryAttack" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="SecondaryAttack" class="form-control" />
            </div>
        </div>

        <div class="form-group-row">
            <label asp-for="UltimateAttackName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="UltimateAttackName" class="form-control" />
            </div>
        </div>

        <div class="form-group-row">
            <label asp-for="UltimateAttack" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="UltimateAttack" class="form-control" />
            </div>
        </div>

        <div class="form-group-row">
            <label asp-for="Files" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-5">
                <div class="custon-file">
                    <input class="form-control custon-file-input" asp-for="Files" multiple type="file" />
                    <label class="custom-file-label">Choose Images from device -></label>
                </div>
            </div>
        </div>

        <a asp-action="create" asp-cntroller="ships" type="submit" class="btn btn-primary" value="Make a Ship"></a>
        <a asp-action="index" class="btn btn-primary">Cancel</a>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileLabel = $(this).next('.custon-file-input');
                var files = $(this)[0].files;
                if (files.lenght > 1) {
                    fileLabel.html(files.lenght + ' files selected');
                }
                else if (files.lenght == 1) {
                    fileLabel.html(files[0].name);
                }
            });
        });
    </script>
}
