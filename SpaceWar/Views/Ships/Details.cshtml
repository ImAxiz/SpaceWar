@model SpaceWar.Models.Ships.ShipDetailsViewModel

<h1> @Html.DisplayFor(model => model.ShipName) </h1>

<div>
    <h4> Your ship details </h4>
    <h4 />
    <dl class="row">
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Id)
        </div>
        <div id="imagediv">
            @foreach (var image in Model.Image)
            {
                <partial name="_Images" model="image" />
            }
        </div>
        <div class="form-group row">
            <label asp-for="ShipName" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.ShipName)
        </div>

        <div class="form-group row">
            <label asp-for="ShipLevel" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.ShipLevel)
        </div>

        @*TODO: combine ShipXP and ShipXPNextLevel into one*@
        <div class="form-group row">
            <label asp-for="ShipXP" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.ShipXP)
            <label asp-for="ShipXPNextLevel" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.ShipXPNextLevel)
        </div>

        <div class="form-group row">
            <label asp-for="ShipStatus" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.ShipStatus)
        </div>

        @* Display type with image instead*@
        <div class="form-group row">
            <label asp-for="ShipClass" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.ShipClass)
        </div>

        @*Attackid*@
        <div class="form-group row">
            <label asp-for="PrimaryAttack" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.PrimaryAttack)
            <label asp-for="PrimaryAttackPower" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.PrimaryAttackPower)
        </div>

        <div class="form-group row">
            <label asp-for="SecondaryAttack" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.SecondaryAttack)
            <label asp-for="SecondaryAttackPower" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.SecondaryAttackPower)
        </div>

        <div class="form-group row">
            <label asp-for="UltimateAttack" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.UltimateAttack)
            <label asp-for="UltimateAttackPower" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.UltimateAttackPower)
        </div>
    </dl>

    <a asp-action="Index" asp-controller="ships" class="btn btn-secondary">index</a>
</div>
